{
  "files": ["openslide.ts", "dist/openslide-api.js"],
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "allowJs": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "types": []
  },
  "exclude": ["node_modules", "test"]
}
